<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-2 text-white">
   <h1 class="text-xl">Create Post</h1>
   <hr class="opacity-10 mt-3"> 
   <form action="/createpost" method="post" enctype="multipart/form-data">
   <input class="block w-1/3 px-3 py2" type="file" name="postimage">
   <input class="text-black block w-1/3 px-3 py2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
   <textarea class="text-black block w-1/3 px-3 py2 h-60 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
   <input class="block w-1/3 px-3 py2 mt-2 bg-red-700 rounded-md" type="Submit" value="Create Post">
   </form>
</div>
<%- include('./partials/footer.ejs') %>